.btn {
  display: inline-block;
  padding: 6rpx 12rpx;
  margin-bottom: 0;
  font-size: 24rpx;
  font-weight: normal;
  line-height: 1.2;
  text-align: center;
  white-space: nowrap;
  vertical-align: middle;
  color: #fff;
}

.btn-primary {
  background-color: #3c8dbc;
  border-color: #3c8dbc;
  color: #fff;
}

.btn-success {
  background-color: #00a65a;
  border-color: #00a65a;
  color: #fff;
}

.btn-warning {
  background-color: #f39c12;
  border-color: #f39c12;
  color: #fff;
}

.btn-info {
  background-color: #5bc0de;
  border-color: #5bc0de;
  color: #fff;
}

.btn-primary, .btn-primary:hover, .btn-primary:active, .btn-primary:focus {
  background-color: #3c8dbc !important;
  color: #fff;
}

.btn-success, .btn-success:hover, .btn-success:active, .btn-success:focus {
  background-color: #00a65a !important;
  color: #fff;
}

.btn-warning, .btn-warning:hover, .btn-warning:active, .btn-warning:focus {
  background-color: #f39c12 !important;
  color: #fff;
}

.btn-info, .btn-info:hover, .btn-info:active, .btn-info:focus {
  background-color: #5bc0de !important;
  color: #fff;
}

.pull-right {
  float: right;
}

.pull-left {
  float: left;
}

.show {
  display: block;
}

.hide {
  display: none;
}

.text-center {
  text-align: center;
}

.badge {
  display: inline-block;
  min-width: 20rpx;
  padding: 6rpx 14rpx;
  font-size: 24rpx;
  font-weight: bold;
  line-height: 1;
  text-align: center;
  white-space: nowrap;
  vertical-align: middle;
  border-radius: 20rpx;
  margin: 10rpx;
}

.text-word-wrap {
  word-wrap: break-word;
}
